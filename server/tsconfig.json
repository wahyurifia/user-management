{
  "compilerOptions": {
    "target": "ES6", // Target output versi ECMAScript
    "module": "CommonJS", // Gunakan CommonJS untuk Node.js
    "moduleResolution": "node", // Resolusi module sesuai dengan Node.js
    "outDir": "./dist", // Output build di folder dist
    "rootDir": "./src", // Folder source code
    "esModuleInterop": true, // Memungkinkan interop antara CommonJS dan ES modules
    "forceConsistentCasingInFileNames": true, // Cegah masalah case-sensitivity
    "strict": true, // Aktifkan mode strict TypeScript
    "skipLibCheck": true // Skip pengecekan file .d.ts untuk mempercepat build
  },
  "include": ["src/**/*"], // Sertakan semua file di dalam folder src
  "exclude": ["node_modules", "dist"] // Jangan masukkan node_modules dan dist ke build
}
